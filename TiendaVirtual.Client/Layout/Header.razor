@using TiendaVirtual.Client.Services

<header>
    <!-- TOP HEADER -->
    <div id="top-header">
        <div class="container">
            <ul class="header-links list-unstyled d-flex justify-content-start">
                <li><a href="https://wa.me/59176051575 " target="_blank"><i class="fa fa-whatsapp"></i> +591 760-515-75</a></li>
                <li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
                <li>
                    <a href="https://www.google.com/maps?q=-17.75780051859765,-63.174020458288794" target="_blank">
                        <i class="fa fa-map-marker"></i> 1734 Stonecoal Road
                    </a>
                </li>
            </ul>
            <ul class="header-links list-unstyled d-flex justify-content-end">
                <li><a href="#"><i class="fa fa-dollar"></i> BOB</a></li>
                @if (AuthService.UsuarioActual != null)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user"></i> @AuthService.UsuarioActual.NombreUsuario
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end bg-dark" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#" @onclick="VerPerfil"><i class="fa fa-user-circle"></i> Ver perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" @onclick="Salir"><i class="fa fa-sign-out"></i> Salir</a></li>
                        </ul>
                    </li>

                    if (AuthService.UsuarioActual.TipoUsuario != "Usuario")
                    {
                        <li><a class="nav-link" @onclick="IrAdministracion" style="cursor: pointer;"><i class="bi bi-border-all"></i> Administracion</a></li>
                    }
                }
                else
                {
                    <li><a class="nav-link" @onclick="IrLogin" style="cursor: pointer;"><i class="fa fa-user"></i> My Account</a></li>
                }
            </ul>
        </div>
    </div>
    <!-- /TOP HEADER -->
    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row flex-items-center">
                <!-- Cambio: Clase para flexbox -->
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="#" class="logo">
                            <img src="./img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->
                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form>
                            <select class="input-select">
                                <option value="0">All Categories</option>
                                <option value="1">Category 01</option>
                                <option value="1">Category 02</option>
                            </select>
                            <input class="input" placeholder="Search here">
                            <button class="search-btn">Search</button>
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->
                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <!-- Wishlist -->
                        <div>
                            <a href="#">
                                <i class="fa fa-heart-o"></i>
                                <span>Your Wishlist</span>
                                <div class="qty">2</div>
                            </a>
                        </div>
                        <!-- /Wishlist -->
                        <!-- Cart -->
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Your Cart</span>
                                <div class="qty">3</div>
                            </a>
                            <div class="cart-dropdown">
                                <div class="cart-list">
                                    <div class="product-widget">
                                        <div class="product-img">
                                            <img src="./img/product01.png" alt="">
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-name"><a href="#">product name goes here</a></h3>
                                            <h4 class="product-price"><span class="qty">1x</span>$980.00</h4>
                                        </div>
                                        <button class="delete"><i class="fa fa-close"></i></button>
                                    </div>

                                    <div class="product-widget">
                                        <div class="product-img">
                                            <img src="./img/product02.png" alt="">
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-name"><a href="#">product name goes here</a></h3>
                                            <h4 class="product-price"><span class="qty">3x</span>$980.00</h4>
                                        </div>
                                        <button class="delete"><i class="fa fa-close"></i></button>
                                    </div>
                                </div>
                                <div class="cart-summary">
                                    <small>3 Item(s) selected</small>
                                    <h5>SUBTOTAL: $2940.00</h5>
                                </div>
                                <div class="cart-btns">
                                    <a href="#">View Cart</a>
                                    <a href="#">Checkout <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- /Cart -->
                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>

@code {

    [Inject] AuthService AuthService { get; set; } = default!;
    [Inject] NavigationManager Navigation { get; set; } = default!;

    private void IrLogin()
    {
        Navigation.NavigateTo("/acceso");
    }
    private void VerPerfil()
    {
        Navigation.NavigateTo("/perfil");
    }
    private void IrAdministracion()
    {
        Navigation.NavigateTo("/admin");
    }
    private async Task Salir()
    {
        await AuthService.LogoutAsync();
    }
}